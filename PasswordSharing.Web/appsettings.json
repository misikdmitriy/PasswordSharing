{
  "Serilog": {
    "Using": [ "Serilog.Sinks.ColoredConsole", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "ColoredConsole"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs//log.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "service": {
    "connectionStrings": {
      "redis": {
        "connectionString": "localhost:6379",
        "defaultExpiration": "00:15:00"
      } 
    }
  },
	"AllowedHosts": "*"
}
